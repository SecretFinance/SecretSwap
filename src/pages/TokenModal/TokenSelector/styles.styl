.tokenButton {
  align-items: center;
  display: flex;
  justify-content: space-between;
  height: 30px;
  padding: 0 0.4rem;
  width: 110px;
  border-radius: 24px;
  background-color: transparent;
  -webkit-font-smoothing: antialiased;
  -webkit-tap-highlight-color: transparent;
  cursor: pointer;
  transition: all 0.4s ease;
  outline: none;
}

.ripple {
  position: relative;
  overflow: hidden;
  transform: translate3d(0, 0, 0);

  &:after {
    content: '';
    display: block;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    pointer-events: none;
    background-image: radial-gradient(circle, #FF0000 10%, transparent 10.01%);
    background-repeat: no-repeat;
    background-position: 50%;
    transform: scale(10, 10);
    opacity: 0;
    transition: transform 0.5s, opacity 1s;
  }

  &:active:after {
    transform: scale(0, 0);
    opacity: 0.2;
    transition: 0s;
  }
}

.selectATokenButton {
  border-radius: 10px;
  font-family: 'Poppins',Arial, Helvetica, sans-serif;
  height: 44px;
  width: 200px;
  -webkit-font-smoothing: antialiased;
  -webkit-tap-highlight-color: transparent;
  border: none;
  cursor: pointer;
  transition: all 0.8s ease;
  outline: none;
  @media only screen and (max-width: 753px) {
    width:100px;
    font-size: 14px;
  }

  &:disabled {
    cursor: default;
  }
}

.clearTokenButton {
  @extend .selectATokenButton;
  width: 300px;
}
.addCustomToken__button{
  @extend .selectATokenButton;
}
.tokenSelectorSearch {
  flex: 1;
  border-radius: 4px;
  border: 1px solid rgb(237, 238, 242);
  background: transparent;
  width: 100%;
  height: 46px;
  padding: 16px;
  font-size: 18px;
  outline: none;
  margin-bottom: 1rem;
  &.dark {
    background-color: #363636;
    color: white;
  }
  &.light {
    color: black;
  }

  &:focus {
    border: 1px solid rgba(23,63,27,9);
  }
  &::placeholder{
    font-family: 'Poppins',Arial, Helvetica, sans-serif;
    font-size: 16px;
    color: #5F5F6B;
  }
}

.listTokens__container{
  height: 60vh;
  width: 100%;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #DEDEDE;
  border-bottom:1px solid #DEDEDE;
}
.listTokens__subcontainer{
  width: 100% ;
  padding: .5rem .5rem;
  height: 100%;
  margin: 0;
}
.light {
  &.selectATokenButton{
    background: rgba(23,63,27, 0.2);;
    color:#5F5F6B;
  }
  &.tokenButton{
    color: #5F5F6B
  }
  &.clearTokenButton{
    background: rgba(255, 255, 255, 0.5);
  }
  &.addCustomToken__button{
    background: #D6D6D6;
  }
}

.dark {
  &.selectATokenButton{
    background: rgba(255, 255, 255, 0.1);
    color:#DEDEDE;
  }
  &.tokenButton{
    color: #dedede
  }
  &.clearTokenButton{
    background: rgba(255, 255, 255, 0.1);
  }
  &.addCustomToken__button{
    background: rgba(255, 255, 255, 0.1);
  }
}

.thumb{
  border-radius: 20px;
  &.dark{
    background: #555;
  }
  &.light {
    background: #ccc;
  }
}
#modal_container{
  width: 750px;
  @media only screen and (max-width: 753px) {
    width: 90%;
  }
}
#actions{
  @media only screen and (max-width: 753px) {
    padding: 1rem !important
  }
}
